<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white_light2"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_item_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/history_item_detail_name" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_item_detail_solde"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/history_item_detail_solde" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_item_detail_country"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/history_item_detail_country"/>
    </LinearLayout>

</LinearLayout>
